@model DataAccess.Models.VendorOrder

<div class="bs-docs-header" id="content">
    <div class="container">
        <h1>车名堂 - 快速交易</h1>
        <p> <mark>登记</mark> - 项目 - 结算 - 完成</p>
    </div>
</div>
<div class="container">
    <div class="row">

        <div class="col-md-9">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    <div class="form-group">
                        <label class="col-md-offset-3 control-label col-md-2">手机号</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CustomerCellphone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerCellphone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-offset-3 control-label col-md-2">车牌号</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CustomCarNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomCarNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-2">
                            <input type="submit" value="登记 - 下一步" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            }
        </div>


    </div>

</div>